generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  STANDARD_USER
  EVENT_ADMIN
  ULTIMATE_ADMIN
}

enum EventStatus {
  DRAFT
  PENDING_APPROVAL
  PUBLISHED
  REJECTED
  ARCHIVED
}

enum ApplicationStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id            String   @id @default(uuid())
  firebaseUid   String   @unique @map("firebase_uid")
  email         String   @unique
  fullName      String   @map("full_name")
  photoUrl      String?  @map("photo_url")
  role          UserRole @default(STANDARD_USER)
  isStudent     Boolean  @default(true) @map("is_student")
  collegeName   String?  @map("college_name")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  interests           UserInterest[]
  createdEvents       Event[]              @relation("CreatedEvents")
  likedEvents         EventLike[]
  registrations       EventRegistration[]
  adminApplications   AdminApplication[]   @relation("UserApplications")
  reviewedApplications AdminApplication[] @relation("ReviewedApplications")

  @@map("users")
}

model EventCategory {
  id          String   @id @default(uuid())
  name        String   @unique
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now()) @map("created_at")

  userInterests     UserInterest[]
  primaryEvents     Event[]        @relation("PrimaryCategory")
  additionalEvents  EventAdditionalCategory[]

  @@map("event_categories")
}

model UserInterest {
  id         String   @id @default(uuid())
  userId     String   @map("user_id")
  categoryId String   @map("category_id")
  createdAt  DateTime @default(now()) @map("created_at")

  user     User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  category EventCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([userId, categoryId])
  @@map("user_interests")
}

model Event {
  id                      String      @id @default(uuid())
  createdByUserId         String      @map("created_by_user_id")
  title                   String
  description             String      @db.Text
  date                    DateTime
  time                    String
  location                String
  district                String
  googleMapsLink          String?     @map("google_maps_link")
  primaryCategoryId       String      @map("primary_category_id")
  entryFee                String?     @map("entry_fee")
  isFree                  Boolean     @default(false) @map("is_free")
  prizeDetails            String?     @db.Text @map("prize_details")
  contactEmail            String      @map("contact_email")
  contactPhone            String      @map("contact_phone")
  externalRegistrationLink String?    @map("external_registration_link")
  howToRegisterLink       String?     @map("how_to_register_link")
  instagramUrl            String?     @map("instagram_url")
  facebookUrl             String?     @map("facebook_url")
  youtubeUrl              String?     @map("youtube_url")
  bannerUrl               String?     @map("banner_url")
  status                  EventStatus @default(PENDING_APPROVAL)
  rejectionReason         String?     @db.Text @map("rejection_reason")
  createdAt               DateTime    @default(now()) @map("created_at")
  updatedAt               DateTime    @updatedAt @map("updated_at")

  createdBy            User                       @relation("CreatedEvents", fields: [createdByUserId], references: [id])
  primaryCategory      EventCategory              @relation("PrimaryCategory", fields: [primaryCategoryId], references: [id])
  additionalCategories EventAdditionalCategory[]
  likes                EventLike[]
  registrations        EventRegistration[]

  @@index([status])
  @@index([date])
  @@index([district])
  @@index([primaryCategoryId])
  @@map("events")
}

model EventAdditionalCategory {
  id         String   @id @default(uuid())
  eventId    String   @map("event_id")
  categoryId String   @map("category_id")
  createdAt  DateTime @default(now()) @map("created_at")

  event    Event         @relation(fields: [eventId], references: [id], onDelete: Cascade)
  category EventCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([eventId, categoryId])
  @@map("event_additional_categories")
}

model EventLike {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  eventId   String   @map("event_id")
  createdAt DateTime @default(now()) @map("created_at")

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([userId, eventId])
  @@map("event_likes")
}

model EventRegistration {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  eventId   String   @map("event_id")
  createdAt DateTime @default(now()) @map("created_at")

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([userId, eventId])
  @@map("event_registrations")
}

model AdminApplication {
  id               String            @id @default(uuid())
  userId           String            @map("user_id")
  motivationText   String            @db.Text @map("motivation_text")
  status           ApplicationStatus @default(PENDING)
  reviewedByUserId String?           @map("reviewed_by_user_id")
  reviewedAt       DateTime?         @map("reviewed_at")
  createdAt        DateTime          @default(now()) @map("created_at")
  updatedAt        DateTime          @updatedAt @map("updated_at")

  user       User  @relation("UserApplications", fields: [userId], references: [id], onDelete: Cascade)
  reviewedBy User? @relation("ReviewedApplications", fields: [reviewedByUserId], references: [id])

  @@map("admin_applications")
}
